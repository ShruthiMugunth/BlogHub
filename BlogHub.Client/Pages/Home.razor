@page "/"
@using Microsoft.AspNetCore.Components.Web

<div class="landing-container">
    <div class="hero-card">
        <div class="hero-header">
            <i data-lucide="pen-tool" class="hero-icon"></i>
            <h1>BlogHub</h1>
        </div>

        <h2 class="tagline">Write. Read. Connect.</h2>

        <button class="cta-button" @onclick="NavigateToLoginOrReg">
            <span>Get Started</span>
            <i data-lucide="arrow-right" class="arrow-icon"></i>
        </button>
    </div>
</div>

@code {
    [Inject] NavigationManager Nav { get; set; } = default!;
    private void NavigateToLoginOrReg() => Nav.NavigateTo("/login-or-reg");
}